<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li> <%= dose.description %> - <%= dose.ingredient.name %> <%= link_to "Delete", dose_path(dose), method: "delete" %></li>
    <% end %>
  </ul>

  <p>Add a dose</p>

  <%= render 'doses/form', cocktail: @cocktail, dose: @dose%>

  <%= link_to "Back", cocktails_path %>
</div>

